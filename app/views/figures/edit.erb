<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="post">
   <h3>
   Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
   </h3>

   <br>
   <h3>Titles</h3>

   <% Title.all.each do |title| %>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"
      <%= "checked" if @figure.titles.include?(title) %> >
      <%= title.name %><br>
   <% end %>


   <br>
   <h3>Create New Title:</h3>
   <br>
   <input type="text" name="title[name]">

   <br>
   <h3>Landmarks</h3>

   <% Landmark.all.each do |landmark| %>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"
      <%= "checked" if @figure.landmarks.include?(landmark) %> >
      <%= landmark.name %> <br>
   <% end %>


   <br>
   <h3>Create New Landmark:</h3>
   <input type="text" name="landmark[name]">

   <br>
   <input type="submit" id="submit">
</form>